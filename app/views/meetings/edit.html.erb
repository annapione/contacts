<!-- Validation failure messages -->

<% if @meeting.errors.any? %>
  <% @meeting.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit Meeting #<%= @meeting.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_meeting/<%= @meeting.id %>" class="form-horizontal">
      <!-- Label and input for contact_id -->
      <div class="form-group">
        <label for="contact_id" class="col-sm-2 control-label">
          Contact
        </label>
        <div class="col-sm-10">
          <input type="text" id="contact_id" name="contact_id" placeholder="Contact" class="form-control" value="<%= @meeting.contact_id %>">
        </div>
      </div>

      <!-- Label and input for event_id -->
      <div class="form-group">
        <label for="event_id" class="col-sm-2 control-label">
          Event
        </label>
        <div class="col-sm-10">
          <input type="text" id="event_id" name="event_id" placeholder="Event" class="form-control" value="<%= @meeting.event_id %>">
        </div>
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="col-sm-2 control-label">
          Date
        </label>
        <div class="col-sm-10">
          <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @meeting.date %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Meeting" class="btn btn-warning">
          or
          <a href="/meetings/<%= @meeting.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

