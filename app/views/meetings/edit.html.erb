<!-- Validation failure messages -->

<% if @meeting.errors.any? %>
  <% @meeting.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>



<!-- Responsive panel example -->

<div class="row">
  <div class="spacer50"></div>
</div>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Meeting #<%= @meeting.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_meeting/<%= @meeting.id %>" class="form-horizontal">
          <!-- Label and input for user_id -->

              <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= current_user.id %>">

          <!-- Label and input for contact_id -->
          <div class="form-group">
            <label for="contact_id" class="col-sm-2 control-label">
              Contact
            </label>
            <div class="col-sm-10">
              <%= select_tag(:contact_id, options_from_collection_for_select(current_user.contacts, :id, :fullnameandco, :selected => @meeting.contact_id), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for event_id -->
          <div class="form-group">
            <label for="event_id" class="col-sm-2 control-label">
              Event
            </label>
            <div class="col-sm-10">
              <%= select_tag(:event_id, options_from_collection_for_select(current_user.events, :id, :name, :selected => @meeting.event_id), :class => "form-control") %>
            </div>
          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Update Meeting" class="btn btn-warning">
              or
              <a href="/meetings/<%= @meeting.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
