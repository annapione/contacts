<!-- Simple full-width example-->

<div class="page-header">
  <h1>Event #<%= @event.id %>: <%= @event.name %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
    <dd><td><%= @event.user.firstname %></td></dd>

      <dt>Name</dt>
      <dd><%= @event.name %></dd>

      <dt>Location</dt>
      <dd><%= @event.location %></dd>

      <dt>Date</dt>
      <dd><%= @event.date.strftime("%m/%d/%Y") %></dd>


    </dl>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <dl class="dl-horizontal">
        <dt>Contacts</dt>
          <dd>
            <ul>
              <% @event.contacts.uniq.each do |contact| %>
                <li><a href="/contacts/<%=contact.id%>"><%= contact.fullname %></a></li>
              <% end %>
            </ul>
          </dd>
      </dl>
    </div>

  <div class="col-md-4">
    <dl class="dl-horizontal">
        <dt>Companies</dt>
          <dd>
            <ul>
              <% @event.companies.uniq.each do |company| %>
                <li><a href="/companies/<%=company.id%>"><%= company.name %></a></li>
              <% end %>
            </ul>
          </dd>
      </dl>
    </div>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">



      <dt></dt>
      <dd>
        <div class="btn-group">
          <a href="/events" class="btn btn-primary">
            <i class="fa fa-chevron-left"></i>
          </a>

          <a href="/events/<%= @event.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_event/<%= @event.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </div>
      </dd>
    </dl>

  </div>
</div>

<!-- End simple full-width example-->

