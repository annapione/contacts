<!-- Simple full-width example-->

<div class="page-header">
  <h1>Company #<%= @company.id %>: <%= @company.name %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @company.name %></dd>

      <dt>Industry</dt>
      <dd><a href="/industries/<%=@company.industry_id%>"><%= @company.industry.name %></a></dd>

      <dt>Description</dt>
      <dd><%= @company.description %></dd>


    </dl>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <dl class="dl-horizontal">
        <dt>Functions</dt>
          <dd>
            <ul>
              <% @company.functions.uniq.each do |function| %>
                <li><a href="/functions/<%=function.id%>"><%= function.name %></a></li>
              <% end %>
            </ul>
          </dd>
      </dl>
    </div>

  <div class="col-md-4">
    <dl class="dl-horizontal">
        <dt>Contacts</dt>
          <dd>
            <ul>
              <% @companycontacts.each do |contact| %>
                <li><a href="#"><%= contact.fullname %></a></li>
              <% end %>
            </ul>
          </dd>
      </dl>
    </div>
  <div class="col-md-4">
    <dl class="dl-horizontal">
        <dt>Events</dt>
          <dd>
            <ul>
              <% @company.events.uniq.each do |event| %>
                <% if current_user.events.include?(event) %>
                  <li><a href="/events/<%=event.id%>"><%= event.name %></a></li>
                <% end %>
              <% end %>
            </ul>
          </dd>
      </dl>
    </div>


</div>


<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">


      <dt></dt>
      <dd>
        <div class="btn-group">
          <a href="/companies" class="btn btn-primary">
            <i class="fa fa-chevron-left"></i>
          </a>

          <a href="/companies/<%= @company.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_company/<%= @company.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </div>
      </dd>
    </dl>

  </div>
</div>

<!-- End simple full-width example-->
