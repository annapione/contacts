<!-- Validation failure messages -->

<% if @company.errors.any? %>
  <% @company.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>




<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Company #<%= @company.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_company/<%= @company.id %>" class="form-horizontal">
          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @company.name %>">
            </div>
          </div>

          <!-- Label and input for industry_id -->
          <div class="form-group">
            <label for="industry_id" class="col-sm-2 control-label">
              Industry
            </label>
            <div class="col-sm-10">
              <%= select_tag(:industry_id, options_from_collection_for_select(Industry.all, :id, :name, :selected => @company.industry_id), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
              Description
            </label>
            <div class="col-sm-10">
              <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @company.description %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Update Company" class="btn btn-warning">
              or
              <a href="/companies/<%= @company.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
