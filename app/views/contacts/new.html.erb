<!-- Validation failure messages -->

<% if @contact.errors.any? %>
  <% @contact.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Responsive panel example -->

<div class="row">
  <div class="spacer50"></div>
</div>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Contact</h3>
      </div>
      <div class="panel-body">
        <form action="/create_contact" class="form-horizontal">
          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="hidden" value="<%= current_user.id %>">
            </div>
          </div>
          <!-- Label and input for firstname -->
          <div class="form-group">
            <label for="firstname" class="col-sm-2 control-label">
              First Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="firstname" name="firstname" placeholder="First Name" class="form-control" value="<%= @contact.firstname %>">
            </div>
          </div>

          <!-- Label and input for lastname -->
          <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label">
              Last Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="lastname" name="lastname" placeholder="Last Name" class="form-control" value="<%= @contact.lastname %>">
            </div>
          </div>

          <!-- Label and input for email -->
          <div class="form-group">
            <label for="email" class="col-sm-2 control-label">
              Email
            </label>
            <div class="col-sm-10">
              <input type="text" id="email" name="email" placeholder="Email" class="form-control" value="<%= @contact.email %>">
            </div>
          </div>


          <!-- Label and input for function_id -->
          <div class="form-group">
            <label for="function_id" class="col-sm-2 control-label">
              Function
            </label>
            <div class="col-sm-10">
              <%= select_tag(:function_id, options_from_collection_for_select(Function.all, :id, :name), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for company_id -->
          <div class="form-group">
            <label for="company_id" class="col-sm-2 control-label">
              Company
            </label>
            <div class="col-sm-10">
              <%= select_tag(:company_id, options_from_collection_for_select(Company.all, :id, :name), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for location_id -->
          <div class="form-group">
            <label for="location_id" class="col-sm-2 control-label">
              Location
            </label>
            <div class="col-sm-10">
               <%= select_tag(:location_id, options_from_collection_for_select(Location.all, :id, :city), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for job_title -->
          <div class="form-group">
            <label for="job_title" class="col-sm-2 control-label">
              Job title
            </label>
            <div class="col-sm-10">
              <input type="text" id="job_title" name="job_title" placeholder="Job title" class="form-control" value="<%= @contact.job_title %>">
            </div>
          </div>

          <!-- Label and input for notes -->
          <div class="form-group">
            <label for="notes" class="col-sm-2 control-label">
              Notes
            </label>
            <div class="col-sm-10">
              <input type="text" id="notes" name="notes" placeholder="Notes" class="form-control" value="<%= @contact.notes %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create Contact" class="btn btn-success">
              or
              <a href="/contacts">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
