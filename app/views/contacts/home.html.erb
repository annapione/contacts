        <% end %>
          </ul>
      </div>
      <div class="col-md-3">
        Events
          <ul>
          <% @event_recent.each do |event| %>
            <li><a href="/events/<%=event.id%>"><%= event.name %></a></li>

        <% end %>
          </ul>
      </div>
  </div>


