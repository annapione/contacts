    <div class="row">
      <h3> Recently Added</h3>
    </div>
    <div class="row row-centered">
      <div class="col-md-2">
        Companies
          <ul>
          <% @company_recent.each do |company| %>
            <li><a href="/companies/<%=@company_id%>"><%= company.name %></a></li>

        <% end %>
