      </div>

      <div class="col-md-2">
        Locations
          <ul>
          <% @location_recent.each do |location| %>
            <li><a href="/locations/<%=@location_id%>"><%= location.city %></a></li>

        <% end %>
          </ul>
      </div>
      <div class="col-md-2">
        Events
          <ul>
          <% @event_recent.each do |event| %>
            <li><a href="/events/<%=@event_id%>"><%= event.name %></a></li>

        <% end %>
          </ul>
      </div>
