<div class="page-header">
  <h1>
    Contacts
    <a href="/contacts/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Simple table layout example -->

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Company</th>
          <th>Location</th>
          <th>Job title</th>
          <th>Notes</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.user.firstname %></td>
            <td><%= contact.firstname %></td>
            <td><%= contact.lastname %></td>
            <td><a href="/companies/<%=contact.company_id%>"><%= contact.company.name %></a></td>
            <td><a href="/locations/<%=contact.location_id%>"><%= contact.location.city %></a></td>
            <td><%= contact.job_title %></td>
            <td><%= contact.notes %></td>
            <td>
              <a href="/contacts/<%= contact.id %>" class="btn btn-primary">
                <i class="fa fa-search-plus"></i>
              </a>
            </td>
            <td>
              <a href="/contacts/<%= contact.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
            </td>
            <td>
              <a href="/delete_contact/<%= contact.id %>" class="btn btn-danger">
                <i class="fa fa-trash-o"></i>
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<p>
  Download:
  <%= link_to "CSV", contacts_path(format: "csv") %> <i class="fa fa-file-excel-o"></i>
</p>

