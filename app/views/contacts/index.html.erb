          <th>Email</th>
          <th>Industry</th>
          <th>Function</th>
          <th>Company</th>
          <th>Location</th>
          <th>Job title</th>
          <th>Notes</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.firstname %></td>
            <td><%= contact.lastname %></td>
            <td><%= contact.email %></td>
