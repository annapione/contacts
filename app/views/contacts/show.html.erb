<!-- Simple full-width example-->

<div class="page-header">
  <h1>Contact #<%= @contact.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= User.find_by({:id => @contact.user_id }).firstname %></dd>

      <dt>Firstname</dt>
      <dd><%= @contact.firstname %></dd>

      <dt>Lastname</dt>
      <dd><%= @contact.lastname %></dd>

      <dt>Email</dt>
      <dd><%= @contact.email %></dd>

      <dt>Industry</dt>
      <dd><a href="/industries/<%=@contact.industry_id%>"><%= Industry.find_by({:id => @contact.industry_id }).name %></a></dd>

      <dt>Function</dt>
      <dd><a href="/functions/<%=@contact.function_id%>"><%= Function.find_by({:id => @contact.function_id }).name %></a></dd>

      <dt>Company</dt>
      <dd><a href="/companies/<%=@contact.company_id%>"><%= Company.find_by({:id => @contact.company_id }).name %></a></dd>

      <dt>Location</dt>
      <dd><a href="/locations/<%=@contact.location_id%>"><%= Location.find_by({:id => @contact.location_id }).city %></a></dd>

      <dt>Job title</dt>
      <dd><%= @contact.job_title %></dd>

      <dt>Notes</dt>
      <dd><%= @contact.notes %></dd>

      <dt></dt>
      <dd>
        <div class="btn-group">
          <a href="/contacts" class="btn btn-primary">
            <i class="fa fa-chevron-left"></i>
          </a>

          <a href="/contacts/<%= @contact.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_contact/<%= @contact.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </div>
      </dd>
    </dl>

  </div>
</div>

<!-- End simple full-width example-->


